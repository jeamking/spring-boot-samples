<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <contextName>logbackdemo</contextName>

    <!--输出到控制台 ConsoleAppender-->
    <appender name="consoleLog1" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%-5level] %class - %msg%n</pattern>
            </pattern>
        </layout>
    </appender>

    <!--输出到控制台 ConsoleAppender-->
    <appender name="consoleLog2" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>
                <pattern>%d{HH:mm:ss} [%thread] [%-5level] %class - %msg%n</pattern>
            </pattern>
        </layout>
    </appender>

    <logger name="com.jinjian.demo.service" level="INFO" additivity="false">
        <appender-ref ref="consoleLog1"/>
    </logger>
    
    <logger name="com.jinjian.demo.service2" level="INFO" additivity="false">
        <appender-ref ref="consoleLog2"/>
    </logger>    

    <!--指定最基础的日志输出级别-->
    <root level="INFO">
        <!--appender将会添加到这个loger-->
        <appender-ref ref="consoleLog1"/>
    </root>

</configuration>